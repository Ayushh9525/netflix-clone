#include <stdio.h>

// Function to compute the greatest common divisor (GCD) using Euclid's algorithm
int gcd(int a, int b) {
    while (b != 0) {
        int temp = b;
        b = a % b;
        a = temp;
    }
    return a;
}

// Function to simplify a fraction
void simplify_fraction(int *numerator, int *denominator) {
    int common_divisor = gcd(*numerator, *denominator);
    *numerator /= common_divisor;
    *denominator /= common_divisor;
}

// Function to perform fraction operations
void fraction_calculator(int a, int b, int c, int d, char operator) {
    int numerator, denominator;

    switch (operator) {
        case '+':
            // Addition: (a*d + b*c) / (b*d)
            numerator = a * d + b * c;
            denominator = b * d;
            break;
        case '-':
            // Subtraction: (a*d - b*c) / (b*d)
            numerator = a * d - b * c;
            denominator = b * d;
            break;
        case '*':
            // Multiplication: (a*c) / (b*d)
            numerator = a * c;
            denominator = b * d;
            break;
        case '/':
            // Division: (a*d) / (b*c)
            numerator = a * d;
            denominator = b * c;
            break;
        default:
            printf("Invalid operator!\n");
            return;
    }

    // Simplify the resulting fraction
    simplify_fraction(&numerator, &denominator);

    // Print the result
    printf("Result: %d/%d\n", numerator, denominator);
}

int main() {
    int a, b, c, d;
    char operator;

    // Input the first fraction
    printf("Enter the first fraction (a/b): ");
    scanf("%d/%d", &a, &b);

    // Input the operator
    printf("Enter the operator (+, -, *, /): ");
    scanf(" %c", &operator);

    // Input the second fraction
    printf("Enter the second fraction (c/d): ");
    scanf("%d/%d", &c, &d);

    // Perform the calculation
    fraction_calculator(a, b, c, d, operator);

    return 0;
}